<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A">

    <!-- ViewPager2 будет содержать фрагменты -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerForInfoAboutGreeting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/statusIconOneOutOfThree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <ImageView
        android:id="@+id/statusIconOneOutOfThree"
        android:layout_width="0dp"
        android:layout_height="7.5dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:maxHeight="12dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutForNextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:srcCompat="@drawable/icon_one_out_of_three" />

    <FrameLayout
        android:id="@+id/layoutForNextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_background_for_all"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="56dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:id="@+id/textNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="Далее"
            android:textColor="#FFFFFF"
            android:textSize="17sp"/>
    </FrameLayout>

    <!-- Пустой ConstraintLayout удален, так как он не несет функциональности -->

</androidx.constraintlayout.widget.ConstraintLayout>