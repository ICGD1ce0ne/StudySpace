<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1A1A1A">

    <TextView
        android:id="@+id/labelNameOfApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Глубокий фокус"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelOfMotivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light"
        android:text="Блокируйте отвлечения.\nДостигайте целей."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/labelNameOfApp"
        app:layout_constraintStart_toStartOf="@+id/labelNameOfApp"
        app:layout_constraintTop_toBottomOf="@+id/labelNameOfApp" />

    <ImageView
        android:id="@+id/imageFocus"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/labelNameOfApp"
        app:layout_constraintStart_toStartOf="@+id/labelNameOfApp"
        app:layout_constraintTop_toBottomOf="@+id/labelOfMotivation"
        app:srcCompat="@drawable/icon_goal" />

</androidx.constraintlayout.widget.ConstraintLayout>