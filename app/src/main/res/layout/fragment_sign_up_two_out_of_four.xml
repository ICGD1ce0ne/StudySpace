<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    android:paddingHorizontal="16dp">

    <!-- StudySpace логотип сверху слева -->

    <!-- Центральный контейнер с ограничением ширины 400dp -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/centeredContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textFAQ"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_percent="0.9">

        <!-- "Для" слева -->
        <TextView
            android:id="@+id/labelFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Для"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/labelPersonalization" />

        <!-- "персонализации" слева под "Для" -->
        <TextView
            android:id="@+id/labelPersonalization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="персонализации"
            android:textColor="#DA00E5"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelFor" />

        <!-- Поле ввода возраста -->
        <FrameLayout
            android:id="@+id/layoutForAgeInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/fragment_background_for_input_pole"
            android:minHeight="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/labelPersonalization"
            app:layout_constraintTop_toBottomOf="@+id/labelPersonalization">

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="13dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_light"
                android:hint="Сколько вам лет?"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="16sp"
                android:singleLine="true"
                android:maxLines="1" />
        </FrameLayout>

        <!-- Кнопка "Начать" -->
        <FrameLayout
            android:id="@+id/layoutForNextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_background_for_all"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/labelPersonalization"
            app:layout_constraintTop_toBottomOf="@+id/layoutForAgeInput">

            <TextView
                android:id="@+id/textNextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="Начать"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Текст FAQ внизу -->
    <TextView
        android:id="@+id/textFAQ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        android:text="Мы не собираем и не храним ваши персональные данные. Всё остается на вашем устройстве."
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/centeredContainer"
        app:layout_constraintStart_toStartOf="@+id/centeredContainer"
        app:layout_constraintWidth_max="500dp"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>